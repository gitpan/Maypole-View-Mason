
<h3>Search</h3>
<FORM METHOD="post" ACTION="<%$base%>/<%$classmetadata->{moniker}%>/search/">
    <INPUT TYPE="hidden" NAME="action" VALUE="create">
    <INPUT TYPE="hidden" NAME="class" VALUE="<%$classmetadata->{name}%>">
    <TABLE class="view">
%foreach my $col (@{$classmetadata->{columns}}) {
%next if $col eq "id";
     <TR> <TD class="field"> <% $classmetadata->{colnames}->{$col} %> </TD>
        <TD> 
        <%perl> 
        my $element = $classmetadata->{cgi}->{$col};
        if ($element->{tag} eq "select") {
            $element = $element->unshift_content(
                            HTML::Element->new("option", value =>" "));
        }
        </%perl>
        <%$element->as_HTML%>
 </TD> </TR>
%}
    </TABLE>
    <INPUT TYPE="submit" NAME="search" VALUE="search">
</FORM>
<%once>
use HTML::Element;
</%once>

<%args>
$base
$classmetadata
</%args>
